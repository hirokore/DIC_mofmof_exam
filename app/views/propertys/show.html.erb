<div class="property_form">
  <p>
    <strong>物件名:</strong><%= @property.name %>
  </p>
  <p>
    <strong>賃料:</strong><%= @property.value %>
  </p>
  <p>
    <strong>住所:</strong><%= @property.address %>
  </p>
  <p>
    <strong>築年数:</strong><%= @property.age %>
  </p>
  <p>
    <strong>備考:</strong><%= @property.memo %>
  </p>
</div>
<div class="station_form">
  <% n = 0 %>
  <% @property.nearest_stations.each do |nearest_station| %>
    <h2>最寄り駅<%= n += 1 %></h2>
      <p>
        <strong>路線名:</strong><%= nearest_station.route %>
      </p>
      <p>
        <strong>駅名:</strong><%= nearest_station.station %>
      </p>
      <p>
        <strong>徒歩分数:</strong><%= nearest_station.time %>分
      </p>


<% end %>
</div>
<%= link_to '編集', edit_property_path %> |
<%= link_to '戻る', propertys_path %>

